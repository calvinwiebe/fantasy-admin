.container
    .login
        .row
            .col-md-12
                .row
                    .col-md-12.text-center
                        h2= 'Khello Fantasy Admin'
                .row
                    .col-md-4.col-md-offset-4.well.well-lg
                        form.form-horizontal(action='/login', method="POST")
                            .form-group
                                label.control-label(for='user')
                                    | Username
                                input.form-control(type='text', name='user')
                            .form-group
                                label.control-label(for='password')
                                    | Password
                                input.form-control(type='password', name='password')
                            .form-group
                                button.btn.btn-default(type='submit')
                                    | Sign in